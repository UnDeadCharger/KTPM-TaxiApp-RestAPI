generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KhachHang {
  idKhachHang  String  @id @default(uuid())
  hoTen        String?
  soDienThoai  String  @unique
  diaChi       String?
  toaDoGPSLat  String?
  toaDoGPSLng  String?
  isRegistered Boolean @default(false)
  isVIP        Boolean @default(false)
}

model ChuyenXe {
  idChuyenXe  String    @id @default(uuid())
  idTaiXe     String
  idKhachHang String
  trangThai   String?
  diemDon     String
  diemTra     String
  giaTien     Float?
  gioHen      DateTime?
}

model TaiXe {
  idTaiXe     String  @id @default(uuid())
  hoTen       String
  soDienThoai String  @unique
  idXe        String?
  toaDoGPS    String?
}

model Xe {
  idXe     String  @id @default(uuid()) // Modify the ID field name
  bienSoXe String  @unique
  hieuXe   String?
  loaiXe   String?
}
